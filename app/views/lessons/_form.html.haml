-# frozen_string_literal: true
= simple_form_for(@lesson) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :overview
    = f.input :capacity
    = f.input :Instructor_name
    = f.input :hidden

  .form-actions
    = f.button :submit
